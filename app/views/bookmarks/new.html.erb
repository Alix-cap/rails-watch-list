<h1 class="text-center mt-4">New Bookmark</h1>

<div class="container mt-4">
  <%= simple_form_for [@list, @bookmark] do |form| %>
    <%= form.input :movie_id, as: :select, collection: Movie.all, label: 'Select a movie' %>

    <%= form.input :comment, label: 'Comment' %>

    <%= form.button :submit, 'Create Bookmark' %>
  <% end %>

  <%= link_to 'Back to List', list_path(@list) %>
</div>
