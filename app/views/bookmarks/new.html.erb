<h1>Add a movie to your <%= @list.name %> list</h1>

<div class="container mt-4">
  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.input :comment %>
    <%= f.association :movie, prompt: "Select a movie" %>
    <%= f.submit 'Create Bookmark' %>
  <% end %>

  <%= link_to 'Back to List', list_path(@list) %>
</div>
